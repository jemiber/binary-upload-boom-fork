<%- include('partials/header') -%>
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(let i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>" class="text-decoration-none">
              <img class="img-fluid" src="<%= posts[i].image%>">
              <p class="post-creator"><%= posts[i].user.userName%>:</p>
              <p class="post-title"><%= posts[i].title%></p>
            </a>
            <p class="post-caption"><%= posts[i].caption%></p>
          </li>
        <% } %>
        <div class="fixed-bottom">
          <a href="/profile" class="btn btn-primary" type="button">+
          </a>
        </div>
        </ul>
    </div>
  </div>

<%- include('partials/footer') -%>